# OpenAI (required for AI)
OPENAI_API_KEY=

# Clearbit (optional; enriches brand with company name, logo, industry, size, location)
# CLEARBIT_API_KEY=

# SerpAPI (optional; YouTube creatives + Google Trends interest over time)
# SERPAPI_KEY=

# Set to "true" on Netlify (or any short-timeout serverless) to use fast analysis:
# mock data + 2 LLM calls only (no Clearbit/SerpAPI/Google Trends). Avoids 504 timeout.
# FAST_ANALYSIS=true

# PostgreSQL (optional; enables analysis history)
# DATABASE_URL=postgresql://user:pass@localhost:5432/brand_intelligence

# Optional: enable pgvector later
# PGVECTOR_ENABLED=true

# InVideo AI (strategy video generation from script)
# INVIDEO_API_KEY=

# Optional: InVideo API base URL (default: https://api.invideo.io/v1)
# INVIDEO_API_BASE=

# Video generation pipeline (default: openai) â€“ used if not using InVideo
# VIDEO_PROVIDER=openai
# VIDEO_PROVIDER=gemini

# Gemini (required only if VIDEO_PROVIDER=gemini)
# GEMINI_API_KEY=
